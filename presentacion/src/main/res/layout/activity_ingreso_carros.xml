<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    tools:context="com.example.estacionamiento.IngresoCarros">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logo_nube_ingreso_carro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nube" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titulo_ingreso_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_grande"
                android:background="@color/fondo_titulos"
                android:paddingHorizontal="@dimen/padding_medio"
                android:text="@string/texto_titulo_automoviles"
                android:textSize="@dimen/texto_titulos_principales"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tarjeta_ingreso_carro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tarjeta_ingreso_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen_media"
                android:backgroundTint="@color/fondo_titulos"
                app:cardCornerRadius="@dimen/radio_borde_medio"
                app:layout_constraintBottom_toTopOf="@id/boton_registrar_moto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titulo_ingreso_carro">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/texto_ingreso_placa_vehiculo_carros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margen_chica"
                        android:maxLength="7"
                        android:background="@color/sobre_tarjeta"
                        android:contextClickable="true"
                        android:gravity="center"
                        app:endIconDrawable="@drawable/ic_baseline_icono_carro"
                        app:endIconMode="custom"
                        app:errorEnabled="true"
                        android:hint="@string/texto_ingreso_placa_vehiculo"
                        android:padding="@dimen/padding_chico"
                        android:textSize="@dimen/texto_titulos_principales"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/titulo_disponibilidad_carros"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ingreso_placa_vehiculo_carros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/titulo_disponibilidad_carros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margen_media"
                        android:background="@color/alerta_falso"
                        android:gravity="center"
                        android:padding="@dimen/padding_chico"
                        android:text="@string/texto_estacionamiento_con_capacidad"
                        android:textSize="@dimen/texto_titulos_terciarios"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/texto_ingreso_placa_vehiculo_carros" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/boton_registrar_moto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_grande"
                android:backgroundTint="@color/fondo_botones"
                android:text="@string/texto_boton_registrar"
                app:layout_constraintBottom_toTopOf="@id/imagen_motos_parqueadero"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tarjeta_ingreso_carro" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen_motos_parqueadero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/boton_registrar_moto"
                app:srcCompat="@drawable/foto_parqueadero" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
